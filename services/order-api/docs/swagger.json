{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "User UUID for demo authentication (TODO: replace with JWT)",
        "title": "Order API",
        "contact": {
            "url": "https://github.com/nimeshabuddhika"
        },
        "license": {
            "name": "MIT License"
        },
        "version": "1.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/v1",
    "paths": {
        "/orders": {
            "post": {
                "description": "Creates an order and publishes to Kafka if valid. The userId in the header is for demo only (TODO: replace with JWT)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Create a new order",
                "parameters": [
                    {
                        "type": "string",
                        "description": "User UUID",
                        "name": "userId",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "Order details",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/views.OrderRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Order created",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid input",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "views.OrderRequest": {
            "description": "Order request info",
            "type": "object",
            "required": [
                "accountId",
                "amount",
                "currency",
                "idempotencyId"
            ],
            "properties": {
                "accountId": {
                    "type": "string"
                },
                "amount": {
                    "type": "number",
                    "maximum": 5000
                },
                "currency": {
                    "type": "string",
                    "enum": [
                        "USD",
                        "CAD"
                    ]
                },
                "idempotencyId": {
                    "description": "Client-provided UUID for idempotency",
                    "type": "string"
                }
            }
        }
    }
}